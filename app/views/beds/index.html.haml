%h1="BED LIST"
%div
  = link_to 'Add bed', new_bed_path
%div{data: {role: 'infinite-scroll'}}
  .table-responsive
    %table.table.table-hover.table-striped.table-bordered
      %thead
        %tr
          %th.text-center="Name"
          %th.text-center="Price"
          %th.text-center="Category"
          %th.text-center="Actions"
      %tbody{data: {role: 'infinite-content'}}
        - @beds.each_with_index do |bed, i|
          %tr
            %td.no-wrap.text-center= bed.name
            %td.text-center= bed.price
            %td.text-center= Room.find(bed.room_id).name
            %td.text-center
              = link_to 'Edit', edit_bed_path(bed), class: "btn btn-primary"
              = link_to 'Delete', bed_path(bed), method: :delete, class:"btn btn-danger"
  .content-loading.hide{data: {role: 'infinite-status'}}
    .spinner
