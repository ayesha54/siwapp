= render 'form'

.action-buttons{"data-role": "action-buttons"}
  = link_to t("send email"), send_email_customer_path, class: 'btn btn-primary'
  = link_to t("download pdf"), print_customer_path(:format=>:pdf) , class: 'btn btn-primary'
  = link_to t("Export Ecxel"), excel_customer_path(:format=>:xls) , class: 'btn btn-primary'
  = link_to t("delete"), @customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger float-xs-left no-margin'
  = link_to t("back"), :back, class: 'btn btn-secondary'
  %button.btn.btn-success{type: 'button', data: {role: 'submit-form', target: 'form'}}=t("save")
