.container
  = form_for @inventory, url: {action: :update} do |f|
    %h3 Add a inventory
    = "<div>#{@inventory.errors.full_messages.first}</div>".html_safe if @inventory.errors.any?
    %p
    %div.form-group
      %label Inventory Name
      = f.text_field :name, class: "form-control"
    %div.form-group
      %label Price
      = f.text_field :price, class: "form-control"
    %div.form-group
      %label Category
      = f.collection_select :category_id, Category.all, :id, :name, {}, {multiple: false, class: 'form-control c-select'}
    %div.form-group
      = link_to 'Back', { controller: 'inventories', action: 'index'}, class: "btn btn-light"
      = f.submit 'Update inventory', class: "btn btn-primary"