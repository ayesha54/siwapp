.container
  = form_for @category, url: {action: :create} do |f|
    %div
      %h3 Add a category
    %div
      %p
        = "<div>#{@category.errors.full_messages.first}</div>".html_safe if @category.errors.any?
      %div.form-group
        %label category Name
        = f.text_field :name, class: "form-control"
    %div.form-group
      = link_to 'Back', { controller: 'categories', action: 'index'}, class: "btn btn-light"
      = f.submit 'Create category', class: "btn btn-primary"