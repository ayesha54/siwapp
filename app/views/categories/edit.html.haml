.container
  = form_for @category, url: {action: :update} do |f|
    %h3 Add a category
    = "<div>#{@category.errors.full_messages.first}</div>".html_safe if @category.errors.any?
    %p
    %div
      %label category Name
      = f.text_field :name
    %div
      = link_to 'Back', { controller: 'categories', action: 'index'}
      = f.submit 'Update category'