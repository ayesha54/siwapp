%h1="ROOM LIST"
%div
  = link_to 'Add room', new_room_path
%div{data: {role: 'infinite-scroll'}}
  .table-responsive
    %table.table.table-hover.table-striped.table-bordered
      %thead
        %tr
          %th.text-center="Name"
          %th.text-center="Actions"
      %tbody{data: {role: 'infinite-content'}}
        - @rooms.each_with_index do |room, i|
          %tr
            %td.no-wrap.text-center= room.name
            %td.text-center
              = link_to 'Edit', edit_room_path(room), class: "btn btn-primary"
              = link_to 'Delete', room_path(room), method: :delete, class:"btn btn-danger"
  .content-loading.hide{data: {role: 'infinite-status'}}
    .spinner